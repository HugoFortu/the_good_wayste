<% city = Place.find(1) %>

<% @product.components.each do |component| %>
  <% component_name = component.name %>
  <% material = component.material %>
  <% material_name = material.name.downcase %>
  <%
    garbadge = Garbadge.
      where(place: city).
      where("? = ANY (garbadges.accepted_materials)", material.slug).
      first
  %>

  <% if garbadge.color.include?("borne") %>
    <% sorting_instructions = " Rendez-vous Ã  la #{garbadge.color} la plus proche pour le jeter" %>
  <% else %>
    <% sorting_instructions = "Jetez-le dans la poubelle #{garbadge.color}" %>
  <% end %>


 <%= render 'shared/card-show' , component: component_name , material: material_name, sorting_instructions: sorting_instructions%>
<% end %>
