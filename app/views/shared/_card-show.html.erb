<div class="card-product bg-white flex my-10 items-center p-3">
  <% case color %>
    <% when 'verte' %>
      <% image_name = "green-trash" %>
    <% when 'bleue' %>
      <% image_name = "blue-trash" %>
    <% when 'jaune' %>
      <% image_name = "yellow-trash" %>
    <% when 'grise' %>
      <% image_name = "grey-trash" %>
    <% when 'borne de tri - papier' %>
      <% image_name = "blue-borne" %>
    <% when 'borne de tri - verre' %>
      <% image_name = "grey-borne" %>
  <% end %>

  <div class="card-product-infos flex-grow ml-5">
    <p class="mb-4 font-bold text-3xl"><%= component.capitalize %> en <%= material %></p>
    <p class="text-2xl"> <%= sorting_instructions %> </p>
  </div>
  <%= image_tag "#{image_name}.png", width:'50', height: 'auto' ,class: 'w-1/6 max-h-full m-auto p-3 rounded-lg m-2' %>

</div>



