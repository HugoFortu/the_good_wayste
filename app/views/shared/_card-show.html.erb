<div class="card-product bg-white flex justify-around items-center my-10">
  <!-- FLEXBOX Composants + matériau -->
  <div class="flex flex-col items-center">
  <!-- AFFICHAGE DU LOGO COMPOSANTS -->
    <% components_names = ["aerosol", "bocal", "boîte", "boite-de-conserve", "bouchon", "bouteille", "brique-alimentaire", "canette", "flacon", "sachet"] %>
    <% components_names.each do |name| %>
      <% if name == component.parameterize %>
          <div><%= image_tag("#{name}.png", width:'100') %></div>
        <% end %>
      <% end %>
    <div class="mt-4 text-3xl"><%= material.capitalize %> </div>
  </div>
  <!-- Chevron -->
  <div>
    <p class="text-6xl" ><i class="fas fa-caret-right arrow-one"></i> <i class="fas fa-caret-right arrow-two"></i> <i class="fas fa-caret-right arrow-three"></i></p>
  </div>
  <!-- Poubelles -->
  <div class="flex flex-col items-center">
    <% case color %>
      <% when 'verte' %>
        <% image_name = "green-trash" %>
      <% when 'bleue' %>
        <% image_name = "blue-trash" %>
      <% when 'jaune' %>
        <% image_name = "yellow-trash" %>
      <% when 'grise' %>
        <% image_name = "grey-trash" %>
      <% when 'borne de tri - papier' %>
        <% image_name = "blue-borne" %>
      <% when 'borne de tri - verre' %>
        <% image_name = "grey-borne" %>
    <% end %>
    <div><%= image_tag "#{image_name}.png", width:'85' ,class: '' %></div>
    <div class="mt-4 text-3xl"><%= sorting_instructions %> </div>
  </div>
</div>




