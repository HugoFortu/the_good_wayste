<%= render 'shared/banner-search'  %>
<% @place = Place.find_by_name_without_case(cookies[:city]) %>


<div class="margin">

  <div data-city= <%=cookies[:city]%> >
    <p class='text-left text-gray-600 font-black' style='font-size: 95px'>
      <span id='banner-typed-text' style='font-size: 95px' class='text-gray-600 pt-50'></span>
    </p>

    <p class='text-4xl text-white font-normal pt-10 text-gray-600'>
      Souriez, le tri difficile c'est fini!
    </p>

    <p class='text-4xl text-white font-normal pt-10 text-gray-600'>
      The Good Wayste, vous simplifie la vie : apprenez à trier vite et bien quelle que soit votre localisation !
    </p>
  </div>



  <div class="card-consigne bg-rose flex content-center my-10">
    <div class="card-product-infos mx-12 my-10">
        <h2 class="font-bold mb-4 text-4xl text-creme">
          Guide du tri
        </h2>
        <p class="text-3xl text-creme">
          <% @place.instruction.each do |i| %>
            <p class="text-creme"><%= i %></p>
          <% end %>
        </p>
    </div>
  </div>


  <div class="card-consigne bg-body flex content-center my-10">
    <div class="card-product-infos mx-12 my-10">
        <h2 class="font-bold mb-4 text-4xl text-creme">
        Contact
        </h2>
        <p class="text-3xl text-creme">
          <% @place.contact.each do |contact| %>
            <p class="text-creme"><%= contact %></p>
          <% end %>
        </p>
    </div>
  </div>






  <div class="mt-64"></div>
  <%= render 'shared/navbar-mobile' %>
</div>

