<% if exist == true  %>
  <label class="w-56 h-56 flex flex-col mx-auto mb-5 clickable_components m-auto text-center exist-component">
<% else %>
  <label class="w-56 h-56 flex flex-col mx-auto mb-5 clickable_components m-auto text-center">
<% end %>
  <div class="m-auto"><%= image_tag("#{name.parameterize}.png", width:'90', data: {component: name, paramname: name.parameterize }) %></div>

  <div><p class="component_name m-auto pt-3 text-3xl w-40 text-gray-600 leading-none font-light text-center"><%= name %></p></div>
  <input type="radio" class="hidden" name="component[name]" value="<%= name %>">
</label>

