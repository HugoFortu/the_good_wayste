
  <label class="w-56 flex flex-col ml-5 mb-5 clickable_components m-auto text-center">
    <%#= link_to '' do %>
      <div class="m-auto"><%= image_tag("#{name}.png", width:'70', data: {component: name }) %></div>
      <div><p class="component_name m-auto"><%= name %></p></div>
      <input type="radio" class="hidden" name="component[name]" value="<%= name %>">
    <% #end %>
  </label>

