<%= simple_form_for [@product, @component] do |f| %>
  <div id="components_form">
    <div class="w-3/4 mx-auto ">
      <p class="text-center my-24">Sélectionnez les composants de votre emballage </p>
      <div class="flex justify-between items-end flex-wrap my-6">

        <% components_name = ["aerosol", "bocal", "boîte", "boîte de conserve", "bouchon", "bouteille", "brique alimentaire", "canette", "flacon", "sachet", "aerosol", "bocal", "boîte", "boîte de conserve", "bouchon", "bouteille"] %>
        <% components_name.each do |name| %>
          <%= render 'component', name: name %>
        <% end %>

      </div>
    </div>

    <!-- MODAL -->

    <div class="overlay hidden fixed inset-0">
      <div class="modale relative z-10 m-20 mt-64 p-3 bg-white rounded-lg shadow-lg">
        <button class="text-right">X</button>
        <div class=" flex flex-col items-center mb-10">
          <div id="component_image" class="mb-5" ></div>
          <div><p>Choisissez le matériau de </p></div>
          <div><h2 id="component_name"></h2></div>
          <div class="flex bg-white rounded-r-full mt-3">
            <%= f.association :material, label: ''%>
            <%= f.submit "OK", class: "rounded-full w-20 btn-component-form" %>
        </div>
        </div>
      </div>
    </div>



<!-- fixed button si trop de components and scroll -->
    <% unless @product.components.nil? %>
      <div class="mx-48 absolute bottom-170">
        <%= render 'shared/pink_button', title: 'Je n\'ai plus de composants à ajouter', direction: product_path(@product) %>
      </div>
    <% end %>
  </div>
<% end %>s
